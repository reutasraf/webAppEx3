
@{
    
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>hi</title>
    <style>

        * {
            padding: 0;
            margin: 0;
        }

        .fit {
            max-width: 100%;
            max-height: 100%;
        }

        .center {
            display: block;
            margin: auto;
        }

    </style>
</head>
<body background="~/export-map-share.png" class="center fit" style="background-size:100% 100%">
    @*<img class="center fit" src="~/export-map-share.png" top=" -90" Bottom=" 90" Right="180" Left="-180">*@
    <svg height="100%" width="100%" >
        <circle cx="@ViewBag.lon" cy="@ViewBag.lat" r="3" stroke="black" stroke-width="3" fill="red" />
    </svg>
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript" language="JavaScript">
        function set_body_height() {
            // set body height = window height
            $('body').height($(window).height());
        }
        $(document).ready(function () {
            $(window).bind('resize', set_body_height);
            set_body_height();
        });</script>
</body>
</html>
